{
    "name": "scherersoftware/cakephp-app-template",
    "description": "CakePHP App Template",
    "homepage": "http://cakephp.org",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=5.5.9",
        "cakephp/cakephp": "3.2.*",
        "mobiledetect/mobiledetectlib": "2.*",
        "cakephp/migrations": "~1.0",
        "cakephp/plugin-installer": "*",
        "codekanzlei/cake-auth-actions": "dev-master",
        "codekanzlei/cake-list-filter": "dev-master",
        "codekanzlei/cake-cktools": "dev-master",
        "codekanzlei/cake-frontend-bridge": "1.0.*",
        "codekanzlei/cake-attachments": "dev-master",
        "codekanzlei/cake-notifications": "dev-master",
        "codekanzlei/cake-model-history": "dev-master",
        "codekanzlei/cake-bootstrap3": "dev-master",
        "scherersoftware/cake-monitor": "dev-master",
        "scherersoftware/cake-cms": "dev-master",
        "scherersoftware/cake-api-baselayer": "dev-master",
        "scherersoftware/cake-wiki": "dev-master",
        "cakephp/cakephp-codesniffer": "dev-master",
        "markstory/asset_compress": "3.0.*",
        "tedivm/jshrink": "~1.0",
        "friendsofcake/bootstrap-ui": "dev-master",
        "oyejorge/less.php": "*",
        "admad/cakephp-glide": "~1.0",
        "jdorn/sql-formatter": "^1.2",
        "josegonzalez/dotenv": "^2.0",
        "josegonzalez/cakephp-queuesadilla": "dev-master",
        "scherersoftware/cake-wysiwyg": "*"
    },
    "repositories": [
        {
            "type": "vcs",
            "url":  "git@gitlab.scherer-software.de:scherersoftware/cake-wysiwyg.git"
        }
    ],
    "require-dev": {
        "psy/psysh": "@stable",
        "cakephp/debug_kit": "~3.2",
        "cakephp/bake": "~1.1",
        "phpunit/phpunit": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src",
            "Admin\\": "./plugins/Admin/src",
            "Api\\V1\\": "./plugins/Api/V1/src",
            "Api\\V2\\": "./plugins/Api/V2/src"
        },
        "files": [
            "vendor/studio-42/elfinder/php/autoload.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests",
            "Api\\V1\\Test\\": "./plugins/Api/V1/tests",
            "Api\\V2\\Test\\": "./plugins/Api/V2/tests"
        }
    },
    "scripts": {
        "post-install-cmd": "App\\Console\\Installer::postInstall",
        "post-autoload-dump": "Cake\\Composer\\Installer\\PluginInstaller::postAutoloadDump"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
